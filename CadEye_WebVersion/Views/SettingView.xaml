<UserControl x:Class="CadEye_WebVersion.Views.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="20"
          VerticalAlignment="Center"
          HorizontalAlignment="Center"
          Background="{Binding DataContext.GlobalBackgroundColor_View, RelativeSource={RelativeSource AncestorType=Window}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- 라디오버튼 선택 영역 -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

            <!-- Dark Mode 카드 -->
            <RadioButton GroupName="ThemeGroup"
                         Command="{Binding OnThemeToggle.ThemeToggleCommand}"
                         CommandParameter="DarkMode"
                         Style="{StaticResource {x:Static ToolBar.RadioButtonStyleKey}}"
                         Margin="10">
                <Border Width="150" Height="150"
                        CornerRadius="12"
                        BorderThickness="2"
                        BorderBrush="{Binding DataContext.GlobalBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                        Background="#1E1E1E"
                        Padding="10"
                        Cursor="Hand">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <fa:ImageAwesome Icon="MoonOutline" Width="40" Height="40" Foreground="White"/>
                        <TextBlock Text="Dark Mode"
                                   Margin="0,10,0,0"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </RadioButton>

            <!-- Light Mode 카드 -->
            <RadioButton GroupName="ThemeGroup"
                         Command="{Binding OnThemeToggle.ThemeToggleCommand}"
                         CommandParameter="WhiteMode"
                         Style="{StaticResource {x:Static ToolBar.RadioButtonStyleKey}}"
                         Margin="10">
                <Border Width="150" Height="150"
                        CornerRadius="12"
                        BorderThickness="2"
                        BorderBrush="{Binding DataContext.GlobalBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                        Background="#F5F5F5"
                        Padding="10"
                        Cursor="Hand">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <fa:ImageAwesome Icon="SunOutline" Width="40" Height="40" Foreground="Black"/>
                        <TextBlock Text="Light Mode"
                                   Margin="0,10,0,0"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="Black"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </RadioButton>
        </StackPanel>
    </Grid>
</UserControl>
