<UserControl x:Class="CadEye_WebVersion.Views.LoginPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400">
    <Grid>
        <Border
            Width="250"
            Height="100"
            Padding="5"
            CornerRadius="15"
            Background="#40FFFFFF"
            BorderBrush="#80FFFFFF"
            BorderThickness="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" Margin="10">
                <!-- Google Login 버튼 (시스템 스타일 제거) -->
                <Button Command="{Binding LoginEvent.LoginCommand}"
                        Height="60"
                        Cursor="Hand"
                        BorderThickness="0"
                        Background="Transparent"
                        Focusable="False"
                        Padding="0"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter />
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="pack://application:,,,/Assets/web_light_rd_SI@2x.png"
                           Stretch="Uniform"/>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
