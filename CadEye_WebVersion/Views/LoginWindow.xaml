<Window x:Class="CadEye_WebVersion.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadEye_WebVersion.Views"
        mc:Ignorable="d"
        Title="Login "
        Height="250"
        Width="300"
        WindowStyle="None"
        BorderThickness="0"
        ResizeMode="NoResize"
        Background="Transparent">
    <Grid>
        <Border
            CornerRadius="15"
            Background="#40FFFFFF"
            BorderBrush="#80FFFFFF"
            BorderThickness="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
             MouseLeftButtonDown="Border_Moved">
            <StackPanel VerticalAlignment="Center">
                <Label
                    Content="Cad Eye Login"
                      Background="Transparent"
                      Foreground="White" 
                      BorderThickness="0" 
                      FontSize="25"
                      FontFamily="Segoe UI"
                      FontWeight="Bold"
                    HorizontalContentAlignment="Center"
                    ></Label>
                <Border
                   Height="20"/>
                <Button Command="{Binding LoginEvent.LoginCommand}"
                    Height="60"
                    Cursor="Hand"
                    BorderThickness="0"
                    Background="Transparent"
                    Focusable="False"
                    Padding="0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter />
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="pack://application:,,,/Assets/web_dark_sq_SI@1x.png"
                       Stretch="Uniform"/>
                </Button>
                <Border
                    Height="20">

                </Border>
                <Border  
                    HorizontalAlignment="Center"
                    Width="260" 
                    Height="60" 
                    CornerRadius="6"
                    BorderBrush="#60999999"
                    Background="#edcf61"
                    BorderThickness="0.5">
                    <Button
                        Content="Exit"
                        Background="Transparent"
                        Foreground="White" 
                        BorderThickness="0" 
                        FontSize="25"
                        FontFamily="Segoe UI"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="CloseButton_Click"/>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>
