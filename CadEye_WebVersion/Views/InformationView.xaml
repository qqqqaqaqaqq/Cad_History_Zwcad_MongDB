<UserControl x:Class="CadEye_WebVersion.Views.InformationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:CadEye_WebVersion.Views"
             xmlns:behavior="clr-namespace:CadEye_WebVersion.Behavior"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            BorderBrush="#e1eaeb"
            BorderThickness="0.3"
            >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width= "*"/>
                    <ColumnDefinition Width= "300"/>
                </Grid.ColumnDefinitions>

                <DataGrid 
                    Grid.Column="0"
                    Style="{StaticResource Data_Gaid_Background}"
                    ColumnHeaderStyle ="{StaticResource Data_Grid_ColumnHeader}"
                    CellStyle="{StaticResource Data_Grid_Cell}"
                    ItemsSource="{Binding InformationEvent}"
                    Margin="5">
                    <i:Interaction.Behaviors>
                        <behavior:BindableSelectedItemBehaviorDataGrid SelectedItem="{Binding SelectedEventEntry, Mode=TwoWay}" />
                    </i:Interaction.Behaviors>
                    <DataGrid.Columns>
                        <DataGridTextColumn 
                            Header="Occure Time" 
                            Binding="{Binding Time}" 
                            ElementStyle ="{StaticResource Data_ElementStyle}"
                            Width="150"/>
                        <DataGridTextColumn 
                            Header="Event" 
                            Binding="{Binding EventName}" 
                            ElementStyle ="{StaticResource Data_ElementStyle}"
                            Width="100"/>
                        <DataGridTextColumn 
                            Header="Description" 
                            Binding="{Binding EventDescription}" 
                            ElementStyle ="{StaticResource Data_ElementStyle}"
                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <ListBox
                    Grid.Column="1"
                    Margin="5"
                    ItemsSource="{Binding Ref}"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <Grid 
                Grid.Column="0"
                Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Border
                    BorderBrush="#e1eaeb"
                    BorderThickness="0.5">
                    <ContentControl 
                    Grid.Row="0"
                    Content="{Binding Host}"/>
                </Border>
                <Button 
                    Grid.Row="1"
                    Style="{StaticResource TextButtonBase}"
                    Content="View"
                    FontFamily="Segoe UI"
                    Command="{Binding WindoHostCommand.NewWindowHostCommand}"/>
            </Grid>


            <Grid     
                Grid.Column="1"
                Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Border 
                        BorderBrush="#e1eaeb"     
                        BorderThickness="0.5">
                    <ContentControl 
                     Grid.Row="0"
                     Content="{Binding HistoryHost}"/>
                </Border>
                <Button 
                    Grid.Row="1"
                    Style="{StaticResource TextButtonBase}"
                    Content="View"
                    Command="{Binding WindoHostCommand.NewCompareWindowHostCommand}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
