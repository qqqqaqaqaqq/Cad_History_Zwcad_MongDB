<UserControl x:Class="CadEye_WebVersion.Views.InformationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:CadEye_WebVersion.Views"
             xmlns:behavior="clr-namespace:CadEye_WebVersion.Behavior"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- Rounded Button Template -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5,2"/>
        </Style>

        <!-- Shadow Effect for Border -->
        <DropShadowEffect x:Key="CardShadow" Color="Black" BlurRadius="8" Opacity="0.2" Direction="270" ShadowDepth="2"/>
    </UserControl.Resources>

    <Grid Background="{Binding DataContext.GlobalBackgroundColor_View, RelativeSource={RelativeSource AncestorType=Window}}" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Section: DataGrid + Side ListBox -->
        <Border Grid.Row="0" Background="{Binding DataContext.GlobalBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}}" CornerRadius="15" Padding="10" Margin="0,0,0,10"
                Effect="{StaticResource CardShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <!-- DataGrid -->
                <DataGrid Grid.Column="0"
                          Style="{StaticResource Data_Gaid_Background}"
                          ColumnHeaderStyle="{StaticResource Data_Grid_ColumnHeader}"
                          CellStyle="{StaticResource Data_Grid_Cell}"
                          ItemsSource="{Binding InformationEvent}"
                          Margin="5"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          RowBackground="#fafafa"
                          AlternatingRowBackground="#f0f0f0">
                    <i:Interaction.Behaviors>
                        <behavior:BindableSelectedItemBehaviorDataGrid SelectedItem="{Binding SelectedEventEntry, Mode=TwoWay}" />
                    </i:Interaction.Behaviors>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="CellEditEnding">
                            <i:InvokeCommandAction Command="{Binding CellEdit.CellEditEndingCommand}"
                                                   CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=DataGrid}, Path=CurrentItem}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Occur Time" Binding="{Binding Time}" IsReadOnly="True" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Event" Binding="{Binding EventName}" IsReadOnly="True" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Description" Binding="{Binding EventDescription}" IsReadOnly="False" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Side ListBox -->
                <Border Grid.Column="1"
                        Margin="5"
                        Background="{Binding DataContext.GlobalBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}}"
                        BorderBrush="{Binding DataContext.GlobalBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="5"
                        Effect="{StaticResource CardShadow}">
                    <ListBox Background="Transparent"
                             BorderThickness="1"
                             BorderBrush="{Binding DataCntext.GlobalBorderBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                             Foreground="{Binding DataContext.GlobalForeground, RelativeSource={RelativeSource AncestorType=Window}}"
                             ItemsSource="{Binding Ref}"/>
                </Border>
            </Grid>
        </Border>

        <!-- Bottom Section: Host & History Panels -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Host Panel -->
            <Border Grid.Column="0" Background="{Binding DataContext.GlobalBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}}" CornerRadius="15" Padding="10" Margin="0,0,10,0"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="0" Content="{Binding Host}" Margin="5"/>

                    <Button Grid.Row="1" Content="View" Command="{Binding WindoHostCommand.NewWindowHostCommand}" 
                            Style="{StaticResource RoundedButton}" Background="#3498DB"
                            Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- History Panel -->
            <Border Grid.Column="1" Background="{Binding DataContext.GlobalBackgroundColor, RelativeSource={RelativeSource AncestorType=Window}}" CornerRadius="15" Padding="10"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <ContentControl Grid.Row="0" Content="{Binding HistoryHost}" Margin="5"/>

                    <Button Grid.Row="1" Content="View" Command="{Binding WindoHostCommand.NewCompareWindowHostCommand}" 
                            Style="{StaticResource RoundedButton}" Background="#2ECC71"
                            Cursor="Hand"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
