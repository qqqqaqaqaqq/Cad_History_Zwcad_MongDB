<Window x:Class="CadEye_WebVersion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:view="clr-namespace:CadEye_WebVersion.Views"
        xmlns:local="clr-namespace:CadEye_WebVersion"
        xmlns:behavior="clr-namespace:CadEye_WebVersion.Behavior"
        xmlns:vm ="clr-namespace:CadEye_WebVersion.ViewModels"
        mc:Ignorable="d"
        Title="Cad Eye" 
        MinHeight="750"
        MinWidth="1250"
        Width="1250"
        Height="750">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0 ">
            <Border 
        Background="{Binding GlobalBackgroundColor}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--  LeftBar  -->
                    <Border    
                        Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>

                            <Grid
                                Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="50"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        FontSize="20"  
                                        Style="{StaticResource TxtBoxCentalize}"                     
                                        Text="{Binding ProjectName}"
                                        Foreground="{Binding GlobalForeground}"
                                        FontFamily="{Binding GlobalFontFamily}"/>
                                    <Button
                                        Grid.Column="1"
                                        x:Name="FolderSelectBtn"
                                        Style="{StaticResource ButtonHover}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Command="{Binding FolderSelecter.FolderSelectCommand}">
                                        <Button.Content>
                                            <Image 
                                                Source="{Binding FolderIcon}"
                                                Width="30"
                                                Height="30"/>
                                        </Button.Content>
                                    </Button>
                                    <Button 
                                        x:Name="RefreshBtn"
                                        Grid.Column="2"
                                        Style="{StaticResource ButtonHover}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{Binding GlobalForeground}"
                                        FontFamily="Segoe MDL2 Assets"
                                        Content="&#xE72C;"
                                        FontSize="23"
                                        Command="{Binding TreeRefreshHandler.TreeRefreshCommand}"/>
                                </Grid>
                            </Grid>

                            <Grid
                                Grid.Row="1"
                                x:Name="UserDBList"
                                Margin="5">
                                <Border
                                    Background="{Binding GlobalBackgroundColor}">
                                    <ComboBox
                                        Style="{StaticResource FancyComboBox}"
                                        ItemsSource="{Binding UserDataBase}"
                                        SelectedItem="{Binding ComboSelectedItem, Mode=TwoWay}"/>
                                </Border>
                            </Grid>


                            <Grid
                            Grid.Row="2"
                            x:Name="TreeHostBox">
                                <Border 
                                    x:Name="TreeBorder"
                                    Style="{StaticResource TreeBorderStyle}"
                                    Background="{Binding GlobalBackgroundColor_View}"
                                    Margin="5,0,5,0">
                                    <TreeView
                                        x:Name="FolderTree"
                                         Margin="10"
                                        ItemsSource="{Binding FileList}"
                                        Style="{StaticResource TreeStyle}"
                                        Background="{Binding GlobalBackgroundColor_View}"
                                        FontFamily="{Binding GlobalFontFamily}">
                                        <i:Interaction.Behaviors>
                                            <behavior:BindableSelectedItemBehaviorTree SelectedItem="{Binding SelectedTreeNode, Mode=TwoWay}" />
                                        </i:Interaction.Behaviors>
                                        <TreeView.ItemTemplate>
                                            <HierarchicalDataTemplate 
                                                ItemsSource="{Binding Children}">
                                                <TextBlock 
                                                    Text="{Binding Name}"/>
                                            </HierarchicalDataTemplate>
                                        </TreeView.ItemTemplate>
                                        <TreeView.ItemContainerStyle>
                                            <Style TargetType="TreeViewItem">
                                                <Setter Property="IsExpanded" Value="True" />
                                                <Setter 
                                                    Property="Foreground" 
                                                    Value="{Binding DataContext.GlobalForeground, RelativeSource={RelativeSource AncestorType=TreeView}}" />
                                            </Style>
                                        </TreeView.ItemContainerStyle>
                                    </TreeView>
                                </Border>
                            </Grid>


                            <Border
                                Grid.Row="3"
                                Margin="5,0,5,0">
                                <Grid>
                                    <TextBlock
                                        x:Name="StatusMessageBox"      
                                        Style="{StaticResource TxtBoxCentalize}"
                                        FontFamily="{Binding GlobalFontFamily}"                                     
                                        FontSize="13"
                                        Text="{Binding StatusMessage}"
                                        Foreground="#FF888888"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!--  Navi  -->
                    <Border    
                        Grid.Column="1">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel
                                Orientation="Horizontal"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch">
                                <ItemsControl Grid.Row="0"
                                    ItemsSource="{Binding NaviTapHosts}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel 
                                            Orientation="Horizontal" 
                                            HorizontalAlignment="Left"
                                            Margin="5,0,0,0"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid
                                            Width="100" 
                                            Visibility="{Binding PageVisibility}">
                                                <Border>
                                                    <Grid>
                                                        <RadioButton 
                                                            Content="{Binding PageName}"
                                                            IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                                            GroupName="NaviGroup"
                                                            FontSize="15"
                                                            Style="{StaticResource RelativeSwitchViewRadio}"
                                                            Command="{Binding DataContext.SwitchViewRadioCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding id}"
                                                            Width="100"/>
                                                        <Button
                                                            Content="✖" 
                                                            FontSize="8"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top"
                                                            Margin="5" 
                                                            Style="{StaticResource ButtonHover}"
                                                            Foreground="#FF888888"
                                                            FontFamily="{Binding DataContext.GlobalFontFamily, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            Command="{Binding DataContext.CloseHostCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                            CommandParameter="{Binding id}"/>

                                                    </Grid>
                                                </Border>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Border
                                    BorderBrush="{Binding GlobalBorderBrush}"
                                    Visibility="{Binding AddNaviVisibility}"
                                    BorderThickness="1"
                                    Width="100"
                                    CornerRadius="5"
                                    Margin="5">
                                    <Button 
                                        Content="+"
                                        FontFamily="{Binding GlobalFontFamily}"
                                        FontSize="40"
                                        Foreground="#FF888888"
                                        BorderThickness="0"
                                        Style="{StaticResource CommonBtnStyle}"
                                        Command="{Binding AddNaviCommand}"
                                        Background="Transparent">
                                    </Button>
                                </Border>
                                <Border
                                    Width="3000"
                                    BorderBrush="{Binding GlobalBorderBrush}"
                                    BorderThickness="0,0,0,1"/>
                            </StackPanel>

                            <Border
                                Grid.Row="1"
                                Margin="5,0,0,0"
                                BorderBrush="{Binding GlobalBorderBrush}"
                                Background="{Binding GlobalBackgroundColor_View}"
                                BorderThickness="1,0,0,0">
                                <ContentControl
                                    Grid.Row="0"
                                    Content="{Binding HostPage}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"/>
                            </Border>


                            <!--  사용자 이름 표시 -->
                            <Border
                                Grid.Row="1"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Visibility="{Binding UserNameVisibility}">
                                <TextBlock
                                    Text="{Binding UserName}"
                                    FontSize="40"
                                    FontWeight="Bold"
                                    FontFamily="{Binding GlobalFontFamily}"
                                    Foreground="{Binding GlobalForeground}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!--  Login  -->
            <Border
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#20FFFFFF"    
            BorderBrush="#80FFFFFF"
                
            BorderThickness="1"
            Visibility="{Binding LoginWindowVisibility}">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" Opacity="0.5"/>
                </Border.Effect>
                <ContentControl
                Content="{Binding LoginHostContent}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="400"
                Height="600"
                Visibility="{Binding LoginWindowVisibility}"/>
            </Border>
        </Grid>
    </Grid>
</Window>
