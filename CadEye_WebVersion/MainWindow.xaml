<Window x:Class="CadEye_WebVersion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:view="clr-namespace:CadEye_WebVersion.Views"
        xmlns:local="clr-namespace:CadEye_WebVersion"
        xmlns:behavior="clr-namespace:CadEye_WebVersion.Behavior"
        xmlns:vm ="clr-namespace:CadEye_WebVersion.ViewModels"
        mc:Ignorable="d"
        Title="Cad Eye" 
        MinHeight="750"
        MinWidth="1250"
        Width="1250"
        Height="750">
    <Border 
        Background="{Binding GlobalColor}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border    
                Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>

                    <Grid
                    Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Style="{StaticResource TextBlockBase}"
                                FontSize="20"                       
                                Text="{Binding ProjectName}"
                                Foreground="{Binding Theme}"
                                FontFamily="Segoe UI Semibold"/>
                            <Button
                                Grid.Column="1"
                                x:Name="FolderSelectBtn"
                                Style="{StaticResource FolderIconStyle}"
                                Command="{Binding FolderSelecter.FolderSelectCommand}">
                                <Button.Content>
                                    <Image 
                                        Source="{Binding FolderIcon}"
                                        Width="30"
                                        Height="30"/>
                                </Button.Content>
                            </Button>
                            <Button 
                                x:Name="RefreshBtn"
                                Grid.Column="2"
                                Style="{StaticResource RefreshIconStyle}"
                                Command="{Binding TreeRefreshHandler.TreeRefreshCommand}"/>
                        </Grid>
                    </Grid>

                    <Grid
                    Grid.Row="1"
                    x:Name="TreeHostBox">
                        <Border 
                            x:Name="TreeBorder"
                            Style="{StaticResource TreeBorderStyle}"
                            Background="{Binding ViewCotainBackGround}"
                            Margin="5,0,5,0">
                            <TreeView
                                x:Name="FolderTree"
                                 Margin="10"
                                ItemsSource="{Binding FileList}"
                                Style="{StaticResource TreeStyle}"
                                Background="{Binding ViewCotainBackGround}">
                                <i:Interaction.Behaviors>
                                    <behavior:BindableSelectedItemBehaviorTree SelectedItem="{Binding SelectedTreeNode, Mode=TwoWay}" />
                                </i:Interaction.Behaviors>
                                <TreeView.ItemTemplate>
                                    <HierarchicalDataTemplate 
                                        ItemsSource="{Binding Children}">
                                        <TextBlock 
                                            Text="{Binding Name}"/>
                                    </HierarchicalDataTemplate>
                                </TreeView.ItemTemplate>
                                <TreeView.ItemContainerStyle>
                                    <Style TargetType="TreeViewItem">
                                        <Setter Property="IsExpanded" Value="True" />
                                        <Setter 
                                            Property="Foreground" 
                                            Value="{Binding DataContext.Theme,
                                            RelativeSource={RelativeSource AncestorType=TreeView}}" />
                                    </Style>
                                </TreeView.ItemContainerStyle>
                            </TreeView>
                        </Border>
                    </Grid>


                    <Border
                        Grid.Row="2"
                        Margin="5,0,5,0">
                        <Grid>
                            <TextBlock
                                x:Name="StatusMessageBox"      
                                Style="{StaticResource TextBlockBase}"
                                FontSize="13"
                                Text="{Binding StatusMessage}"
                                Foreground="#FF888888"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <Border    
                Grid.Column="1">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border 
                        Grid.Row="0">
                        <Grid
                            HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton
                                x:Name="HomeViewbtn"
                                Grid.Column="0"  
                                Style="{StaticResource SwitchViewRadio}"
                                GroupName="ViewGroup"
                                Content="Home"/>
                            <RadioButton
                                x:Name="MainViewbtn"
                                Grid.Column="1"  
                                Style="{StaticResource SwitchViewRadio}"
                                GroupName="ViewGroup"
                                Content="Main"/>
                            <RadioButton
                               x:Name="SettingViewbtn"
                               Grid.Column="2"  
                               Style="{StaticResource SwitchViewRadio}"
                               GroupName="ViewGroup"
                               Content="Setting"/>
                        </Grid>
                    </Border>

                    <Border
                        Grid.Row="1"
                        Background="{Binding ViewCotainBackGround}"
                        BorderBrush="{Binding GlobalBorderBrush}"
                        BorderThickness="1,1,0,0">
                        <Grid>
                            <ContentControl x:Name="HomeHost" Grid.ColumnSpan="2">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=HomeViewbtn, Path=IsChecked}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                            <ContentControl x:Name="InformationHost" Grid.ColumnSpan="2">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=MainViewbtn, Path=IsChecked}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                            <ContentControl x:Name="SettingHost" Grid.ColumnSpan="2">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=SettingViewbtn, Path=IsChecked}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
